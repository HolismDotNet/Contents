{
    "name": "Contents",
    "tables": [
        {
            "name": "Pages",
            "hasGuid": true,
            "columns": [
                {
                    "name": "HierarchyGuid",
                    "unique": true
                },
                {
                    "name": "AcceptsComment",
                    "type": "boolean",
                    "hasDefault": true,
                    "defaultSqlText": "1"
                }
            ]
        },
        {
            "name": "PageContents",
            "isOneToOneWith": "Pages",
            "columns": [
                {
                    "name": "Content"
                }
            ]
        },
        {
            "name": "Sections",
            "hasKey": true,
            "hasOrder": true,
            "hasGuid": true,
            "columns": [
                {
                    "name": "Name"
                },
                {
                    "name": "Supertitle"
                },
                {
                    "name": "Title"
                },
                {
                    "name": "Subtitle"
                },
                {
                    "name": "Description"
                },
                {
                    "name": "ImageGuid",
                    "nullable": true
                },
                {
                    "name": "CanChangeItemsCount",
                    "nullable": true
                },
                {
                    "name": "CanChangeActionsCount",
                    "nullable": true
                }
            ]
        },
        {
            "name": "SectionContents",
            "isOneToOneWith": "Sections",
            "columns": [
                {
                    "name": "Content"
                }
            ]
        },
        {
            "name": "Actions",
            "columns": [
                {
                    "name": "SectionId"
                },
                {
                    "name": "CtaText"
                },
                {
                    "name": "CtaLink"
                }
            ],
            "indexes": [
                {
                    "columns": [
                        "SectionId",
                        "CtaLink"
                    ],
                    "isUnique": true
                }
            ]
        },
        {
            "name": "Items",
            "hasOrder": true,
            "columns": [
                {
                    "name": "SectionId"
                },
                {
                    "name": "IconSvg",
                    "nullable": true
                },
                {
                    "name": "ImageGuid",
                    "nullable": true
                },
                {
                    "name": "AvatarGuid",
                    "nullable": true
                },
                {
                    "name": "Supertitle",
                    "nullable": true
                },
                {
                    "name": "Title",
                    "nullable": true
                },
                {
                    "name": "Subtitle",
                    "nullable": true
                },
                {
                    "name": "Summary",
                    "nullable": true
                },
                {
                    "name": "CtaLink",
                    "nullable": true
                },
                {
                    "name": "CtaText",
                    "nullable": true
                },
                {
                    "name": "ExtraJson",
                    "nullable": true
                }
            ]
        },
        {
            "name": "Texts",
            "hasKey": true,
            "columns": [
                {
                    "name": "Title"
                },
                {
                    "name": "Value"
                }
            ]
        },
        {
            "name": "Images",
            "hasKey": true,
            "columns": [
                {
                    "name": "Title"
                },
                {
                    "name": "ImageGuid"
                },
                {
                    "name": "RecommendedDimensions",
                    "nullable": true
                },
                {
                    "name": "RecommendedColorScheme",
                    "nullable": true
                }
            ]
        }
    ],
    "views": [
        {
            "name": "PageViews",
            "query": [
                "select",
                "    p.*,",
                "    h.Id as HierarchyId,",
                "    h.Title,",
                "    h.ParentId,",
                "    h.Description,",
                "    h.Slug",
                "from Pages p",
                "inner join Taxonomy.Hierarchies h",
                "on p.HierarchyGuid = h.Guid"
            ]
        }
    ]
}